{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sampling Sphere",
  "allOf": [
    { "$ref": "samplingSpatialParametric.json" },
    {
      "type": "object",
      "properties": {
        "geometry": {
          "oneOf": [
            { "$ref": "https://geojson.org/schema/Point.json" },
            { "type": "null" }
          ]
        },
        "properties": {
          "type": "object",
          "properties": {
            "featureType": {
              "type": "string",
              "const": "http://www.opengis.net/def/samplingFeatureType/CSAPI/1.0/SamplingSphere"
            },
            "radius": {
              "description": "Sphere radius in meters",
              "type": "number"
            }
          },
          "required": [ "radius" ]
        }
      }
    }
  ]
}