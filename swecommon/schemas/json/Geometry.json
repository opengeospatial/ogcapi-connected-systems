{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Geometry",
  "description": "Implementation of ISO-19107 geometry datatype. This allows embedding a geometry in a larger schema",
  "type": "object",
  "allOf": [
    {
      "$ref": "./AbstractDataComponent.json"
    },
    {
      "properties": {
        "type": {
          "const": "Geometry"
        },
        "constraint": {
          "type": "object",
          "properties": {
            "geomTypes": {
              "type": "array",
              "minLength": 1,
              "items": {
              "type": "string",
                "enum": [
                  "Point",
                  "MultiPoint",
                  "LineString",
                  "MultiLineString",
                  "Polygon",
                  "MultiPolygon"
                ]
              }
            }
          },
          "additionalProperties": false
        },
        "nilValues": {
          "$ref": "basicTypes.json#/definitions/NilValuesText"
        },
        "srs": {
          "description": "Coordinate reference system with respect to which the coordinates of this geometry are expressed",
          "type": "string",
          "format": "uri"
        },
        "value": {
          "$ref": "https://geojson.org/schema/Geometry.json"
        }
      },
      "required": [
        "type",
        "srs",
        "definition",
        "label"
      ]
    }
  ]
}